<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="@dimen/profile_section_margin_top"
    android:gravity="center_vertical">

    <TextView
        style="@style/ProfileSectionTitle"
        android:id="@+id/info_detail_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/profile_info_gender"/>

    <TextView
        style="@style/ProfileSectionValue"
        android:id="@+id/info_detail_value"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"/>

</LinearLayout>